#!/bin/bash

usage () {
    echo "Usage $0 FEE JACKPOT OWNER_FEE"
    exit 1
}

[[ -n "$1" && -n "$2" && -n "$3" ]] || usage


geth=~/go-ethereum/build/bin/geth
date=$(date +%s)
deploy_file=managers/deploy_${date}.js

fee=$1
jackpot=$2
owner_fee=$3
owner="0xe581c6f0fae3bc426acfc660b36a7caf90f27987"

. bin/compile

sed -e 's/OWNER_FEE/'$owner_fee'/' \
    -e 's/FEE/'$fee'/' \
    -e 's/JACKPOT/'$jackpot'/' \
    -e 's/ABI/'$abi'/' \
    -e 's/CODE/'$code'/' \
    -e 's/OWNER/'$owner'/' bin/deploy.tpl.js > $deploy_file

$geth --testnet --datadir ~/eth-testnet js $deploy_file --unlock $owner
